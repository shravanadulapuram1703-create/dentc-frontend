{
  "compilerOptions": {
    /* Environment */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    /* Paths (optional but recommended) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Output */
    "sourceMap": true,

    /* Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false, // Disabled to fix ~100 errors - can re-enable later
    "noImplicitAny": false, // Allow implicit any for gradual migration

    /* Interop & Build */
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,

    /* Vite-friendly */
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
